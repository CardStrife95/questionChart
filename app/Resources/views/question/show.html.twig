{% extends 'base.html.twig' %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ question.content }}</td>
            </tr>
            {% if answers %}
            <tr>
                <th>Answer</th>
                <td>
                <ul>
            {% for answer in answers%}
            {% if answer.question.id == question.id %}
                {% if answer.isAnswer%}
                <li class="alert alert-success">{{ answer.content }}</li>
                {% else %}
                <li >{{ answer.content }}</li>
                {% endif %}
            {% endif %}
            {% endfor %}
                    </ul>
                </td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('question_index') }}">Back to the list</a>
        </li>
        <li class="list-group-item">
            <a href="{{ path('question_edit', { 'id': question.id }) }}">Edit</a>
        </li>
        <li class="list-group-item">
            {{ form_start(delete_form) }}
                <input class="btn btn-info" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
